@model IEnumerable<GCook.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Categorias</h1>
<h4>Listagem</h4>
<p>
    <a class="btn btn-primary mt-3" asp-action="Create">
        <i class="bi bi-plus-circle me-2"></i>Adicionar
    </a>
</p>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExibirHome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExibirHome)
                </td>
                <td>
                    <a class="text-decoration-none" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-pencil fs-5 text-warning me-2" title="Alterar"></i>
                    </a>
                    <a class="text-decoration-none" asp-action="Details" asp-route-id="@item.Id">
                        <i class="bi bi-search fs-5 text-info me-2" title="Ver Detalhes"></i>
                    </a>
                    <a class="text-decoration-none" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash fs-5 text-danger" title="Excluir"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    <script src="//cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
    <script>
        let table = new DataTable('#myTable');
    </script>
}

@section Styles {
    <link rel="stylesheet" href="//cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css">
}